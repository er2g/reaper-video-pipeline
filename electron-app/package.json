{
  "name": "reaper-video-fx",
  "version": "1.0.0",
  "description": "Video ses işleme aracı - REAPER FX entegrasyonu",
  "author": "reaper-video-fx contributors",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "start": "electron .",
    "gen:icon": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/gen-icon.ps1",
    "ping:reaper": "node scripts/ping-reaper.js",
    "predist": "npm run gen:icon",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "fluent-ffmpeg": "^2.1.3"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10"
  },
  "build": {
    "appId": "com.reaper.videofx",
    "productName": "REAPER Video FX",
    "icon": "build/icon.ico",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "msi",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "tar.gz"
      ],
      "category": "AudioVideo;Audio;Video;Utility"
    },
    "extraResources": [
      {
        "from": "../reaper-scripts",
        "to": "reaper-scripts"
      },
      {
        "from": "../reaper-extension/dist",
        "to": "reaper-extension"
      }
    ]
  }
}
